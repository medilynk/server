// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id         Int     @id @default(autoincrement())
  first_name String
  last_name  String?
  email      String  @unique
  password   String
}

model Patient {
  id            String         @unique
  first_name    String
  last_name     String?
  email         String         @unique
  phone         Int
  appointments  Appointment[]
  prescriptions Prescription[]
}

model Department {
  id     Int      @id @default(autoincrement())
  name   String
  Doctor Doctor[]
}

model Shift_Doctor {
  id         Int      @id @default(autoincrement())
  day        String
  start_time DateTime
  end_time   DateTime
}

model Doctor {
  id            String         @unique
  first_name    String
  last_name     String?
  email         String         @unique
  password      String
  phone         Int
  dept_id       Int
  department    Department     @relation(fields: [dept_id], references: [id])
  shifts        Int[]
  appointments  Appointment[]
  prescriptions Prescription[]
}

model Appointment {
  id             String   @unique
  patient_id     String
  doctor_id      String
  scheduled_date DateTime
  completed      Boolean  @default(false)
  patient        Patient  @relation(fields: [patient_id], references: [id])
  doctor         Doctor   @relation(fields: [doctor_id], references: [id])
}

model Prescription {
  id              Int      @unique
  patient_id      String
  doctor_id       String
  medication_name String
  dosage          String?
  instructions    String?
  date_prescribed DateTime
  patient         Patient  @relation(fields: [patient_id], references: [id])
  doctor          Doctor   @relation(fields: [doctor_id], references: [id])
}

model Staff {
  id         String  @unique
  first_name String
  last_name  String?
  email      String  @unique
  password   String
  phone      Int
}

model Nurse {
  id         String   @unique
  first_name String
  last_name  String?
  email      String
  password   String
  phone      Int
  rooms      String[]
}

model Room {
  id     String   @unique
  type   String
  nurses String[]
}
